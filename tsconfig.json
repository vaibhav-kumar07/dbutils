{
  "compilerOptions": {
    "outDir": "./dist", // Output the compiled files to the 'dist' folder
    "rootDir": "./src", // Use the 'src' folder as the root for source files
    "module": "commonjs", // Module system to use
    "target": "ES6", // Output target (use ES6 for better compatibility)
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all files in the 'src' folder
  "exclude": ["node_modules"] // Exclude node_modules from being compiled
}
